{
	"condition": { //模式配置，仅开发期间生效,貌似对h5无效
	    "current": 4, //当前激活的模式（list 的索引项）
	    "list": [
				{
	            "name": "lazy-img", //模式名称
	            "path": "pages/lazy-img/lazy-img", //启动页面，必选
	            "query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
	        }
					,{
	            "name": "skeleton", //模式名称
	            "path": "pages/skeleton/skeleton", //启动页面，必选
	            "query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
	        },{
	            "name": "flex", //模式名称
	            "path": "pages/flex/flex", //启动页面，必选
	            "query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
	        },{
	            "name": "gallery", //模式名称
	            "path": "pages/gallery/gallery", //启动页面，必选
	            "query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
	        },{
	            "name": "slide-bar", //模式名称
	            "path": "pages/slide-bar/slide-bar", //启动页面，必选
	            "query": "interval=4000&autoplay=false" //启动参数，在页面的onLoad函数里面得到。
	        }
	    ]
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		
		{
		      "path" : "pages/lazy-img/lazy-img",
		      "style" : {
						"navigationBarTitleText": "lazy-img",
						"navigationBarBackgroundColor": "#fff",
						"navigationBarTextStyle": "black"
				}
		 },{
		      "path" : "pages/skeleton/skeleton",
		      "style" : {
						"navigationBarTitleText": "skeleton",
						"navigationBarBackgroundColor": "#fff",
						"navigationBarTextStyle": "black"
				}
		 },
		 {
		 	"path": "pages/index/index",
		 	"style": {
		 		"navigationBarTitleText": "uni-app"
		 	}
		 }
        ,{
            "path" : "pages/flex/flex",
            "style" : {
							"navigationBarTitleText": "flex",
							"navigationBarBackgroundColor": "#fff",
							"navigationBarTextStyle": "black"
						}
        }
        ,{
            "path" : "pages/gallery/gallery",
            "style" : {
							"navigationBarTitleText": "gallery",
							"navigationBarBackgroundColor": "#fff",
							"navigationBarTextStyle": "black"
						}
        },{
            "path" : "pages/slide-bar/slide-bar",
            "style" : {
							"navigationBarTitleText": "slide-bar",
							"navigationBarBackgroundColor": "#fff",
							"navigationBarTextStyle": "black",
							"disableScroll": true,
							"app-plus": {
								"bounce": "none"
							}
						}
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
